<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:d="http://xamarin.com/schemas/2014/forms/design" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="WhiteTeeth.App">
    <Application.Resources>
        <ResourceDictionary>

            <?OnPlatform x:Key="CustomFont" x:TypeArguments="x:String">
                <?On Platform="Android" Value="fontello.ttf#fontello" />
                <?On Platform="iOS" Value="fontello" />
            <?/OnPlatform?>

            <Color x:Key="white">#FFFFFF</Color>
            <Color x:Key="brown">#A98278</Color>
            <Color x:Key="green">#2E8A8F</Color>
            
            <Style x:Key="product_title" TargetType="Label">
                <Setter Property="LineBreakMode" Value="TailTruncation"/>
                <Setter Property="TextColor" Value="{StaticResource green}"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="JosefinSans-Bold"/>
                <Setter Property="FontSize" Value="28"/>
            </Style>

            <Style x:Key="product_title_large" BasedOn="{StaticResource product_title}" TargetType="Label">
                <Setter Property="FontSize" Value="36"/>
            </Style>

            <Style x:Key="product_subtitle" TargetType="Label">
                <Setter Property="TextColor" Value="Orange"/>
                <Setter Property="FontFamily" Value="JosefinSans-Regular"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>



          
        </ResourceDictionary>
    </Application.Resources>
</Application>